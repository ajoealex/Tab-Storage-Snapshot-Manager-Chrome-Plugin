{
    "manifest_version": 3,
    "name": "Tab Storage Snapshot Manager",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "cookies"
    ],
    "host_permissions": [
		"http://*/*",
		"https://*/*"
	],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
				"http://*/*",
				"https://*/*"
			],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}