{
    "manifest_version": 3,
    "name": "Tab Storage Snapshot Manager",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "public/images/icons/icon_16.png",
            "48": "public/images/icons/icon_48.png",
            "128": "public/images/icons/icon_128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "public/images/icons/icon_16.png",
        "48": "public/images/icons/icon_48.png",
        "128": "public/images/icons/icon_128.png"
    }
}